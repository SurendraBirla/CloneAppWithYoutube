<br>
<div class="show-container" >

      <% if @product.image.attached? %>
        <%= image_tag(@product.image, size: '200x200') %>
      <% end %>

       <p class="marg" > <%= @product.name %> </p>
        <p class="marg" > <%= @product.price %> </p>
    <p class="marg">  

    <% if !(current_user.role_id == @role.id) %>
      <%= button_to 'Buy', buys_path(buy: {product_id: @product.id}), method: :post %>
    <% end %>
    </p>
    
    <% if current_user.role_id == @role.id %>
    <p class="marg"> <%= link_to 'Delete', destroy_path(params: { product_id: @product.id }), method: :delete %></p>
    <% end %>
</div>