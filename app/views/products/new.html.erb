<div class="text-center">
  <h1>Products</h1>

  <%= form_with(model: @product, url: products_path, local: true) do |f| %>

    <% if f.object.errors.full_messages.any? %>
      <ul class='error'>
        <% f.object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>

    <div class='row'>
      <%= f.label :Name %>
      <%= f.text_field :name, placeholder: 'Please enter product name' %>
    </div><br>

    <div>
      <%= f.label :Price %>
      <%= f.text_field :price, placeholder: 'Please enter product price' %>
    </div><br>

    <div>
    <%= f.label :Image %>
    <%= f.file_field :image %>
    </div><br>

    <div class='row'>
      <%= f.submit 'Submit' %>
    </div>
  <% end %> <br>
</div>